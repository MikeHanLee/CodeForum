<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:paddingTop="3dp"
    android:paddingBottom="6dp"
    android:background="@drawable/notifications_scroll_view">

    <ImageView
        android:id="@+id/notification_view_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/icon"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notification_view_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_test"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/notification_view_phone"
        app:layout_constraintStart_toEndOf="@id/notification_view_icon"/>

    <TextView
        android:id="@+id/notification_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_test"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/notification_view_icon"
        app:layout_constraintTop_toBottomOf="@id/notification_view_name" />

    <TextView
        android:id="@+id/notification_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/icon_test"
        android:textColor="#ff3333"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>